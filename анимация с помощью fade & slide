
// Добавление анимации средствами JQuery
	

		$("h1").fadeOut(3000);

// Цепной вызов и фнимация на jQuery

	$("h1").text("Этот текст скоро исчезнет").fadeOut (3000);

	$("h1").fadeOut(3000).fadeIn(2000); 
// Уплывает вверх и исчезает, появляется опускаясь сверху
	$("h1").slideUp(1000).slideDown(1000);
