	var randomWords = ["муха", "выдра", "дубина", "мартышка", "крыса"];

// Выбираем случайной части тела из массива randomBodeParts

	var randomBodyParts = randomBodyParts[Math.floor(Math.random () * 3)];
// Выбираем случайного прилогательного из массива randomAdjectives
	 
	var randomAdjectives = randomAdjectives[Math.floor(Math.random () * 3)];
// Выбираем случайные слова из массива randomWords:
	
	var randomWords = randomWords [Math.floor(Math.random () * 5)]
// Соединяем случайные строки в предложение
	
	var randomInsult = "У тебя " + randomBodyParts + " словно " + randomAdjectives + " " + randomWords + "!!!";
	randomInsult;


